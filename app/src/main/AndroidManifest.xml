<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.protectionapp">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".Protection"
        android:allowBackup="true"
        android:icon="@mipmap/protectionapp"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/protectionapp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Base.Light">
        <activity android:name=".activites.Otp"></activity>
        <activity android:name=".RecordsActivites.VoterID" />
        <activity android:name=".RecordsActivites.ATM" />
        <activity android:name=".RecordsActivites.Bank" />
        <activity android:name=".RecordsActivites.DrivingLicence" />
        <activity android:name=".RecordsActivites.PAN" />
        <activity android:name=".RecordsActivites.Adhaar" />
        <activity android:name=".activites.CameraDetector" />
        <activity android:name=".activites.FileShare" />
        <activity android:name=".activites.CacheCleaner" />
        <activity android:name=".activites.CallRecorder" />
        <activity android:name=".activites.HomePage" />
        <activity android:name=".activites.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.LogIn"
            android:label="LogIn" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <service android:name=".services.RecordingService" />
    </application>

</manifest>