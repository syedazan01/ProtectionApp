<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPersonal"
        app:cardBackgroundColor="?attr/primaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRecordName"
                android:text="Record Name"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="?attr/primaryTitleColor"
                android:textSize="22sp"/>
        </LinearLayout>
        
    </androidx.cardview.widget.CardView>
    <View
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cardPersonal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/primaryBackgroundColor"/>

</RelativeLayout>