<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordsActivites.Adhaar">
    <include
        android:id="@+id/toolbarLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/custum_toolbar"/>
    <ImageView
        android:layout_below="@+id/toolbarLay"
        android:id="@+id/aadharlogo"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:src="@drawable/aadharlogo"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/aadharlogo"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adhhar_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:background="@drawable/round_border"
                android:padding="10dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dob_calender"
                android:background="@drawable/round_border"
                android:padding="10dp"
                android:textSize="14sp"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Of Birth"
                 />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=" Select Gender"
            android:textSize="18sp" />



        <RadioGroup
            android:id="@+id/Gradio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >

                <RadioButton
                    android:id="@+id/Gen_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/Gen_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/Gen_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Other" />

        </RadioGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adhar_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="16"
            app:errorEnabled="true"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border"
                android:padding="10dp"
                android:textSize="14sp"
                android:hint="Aadhar Number"
                android:inputType="number"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adhar_addres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:background="@drawable/round_border"
                android:padding="10dp"
                android:textSize="14sp"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/adhar_imageView"
            android:layout_width="87dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cam_openbt"
            android:text="Scan Adhaar"
            android:ems="10"
            android:layout_marginTop="10dp"/>



        <Button
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:id="@+id/addhr_savebt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE/update" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adhaar_sendBT"
            android:text="send"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>
