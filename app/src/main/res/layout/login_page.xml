<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryBackgroundColor">

    <include
        android:id="@+id/toolbarLay"
        layout="@layout/custum_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/confermationcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarLay"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Enter your\nmobile number"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confermationcode"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_regular"
        android:text="We will send you a confirmation code"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <LinearLayout
        android:id="@+id/llPhoneNo"
        android:background="@drawable/round_border"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerInParent="true">

        <TextView
            android:text="+91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/et_phone_number"
            android:layout_width="wrap_content"
            android:ems="14"
            android:layout_marginStart="10dp"
            android:hint="123456789"
            android:background="@null"
            android:maxLength="10"
            android:imeOptions="actionDone"
            android:textColorHint="@color/hintColor"
            android:padding="10dp"
            android:textSize="14sp" />
    </LinearLayout>


    <Button
        android:layout_below="@+id/llPhoneNo"
        android:id="@+id/otp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:ems="14"
        android:text="NEXT"
        android:textColor="@color/white" />


</RelativeLayout>