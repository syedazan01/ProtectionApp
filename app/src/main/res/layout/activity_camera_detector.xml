    <ProgressBar
        android:progressDrawable="@drawable/circular_progress"
        style="?android:progressBarStyleHorizontal"
        android:background="@drawable/circle_shape"
        android:id="@+id/meterView"
        android:indeterminate="false"
        app:layout_constraintTop_toTopOf="@id/glTop20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />
    <Button
        android:layout_marginHorizontal="20dp"
        android:id="@+id/btnCameraByRM"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_design"
        android:text="Detect Camera By Radiation Meter"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginHorizontal="20dp"
        android:id="@+id/btnInfraredCamera"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnCameraByRM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"
        android:text="Detect Infrared Camera"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/glTop20"
        app:layout_constraintGuide_percent="0.15"
        />
</androidx.constraintlayout.widget.ConstraintLayout>