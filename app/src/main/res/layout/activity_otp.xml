<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryBackgroundColor"
    tools:context=".activites.Otp">

    <include
        android:id="@+id/toolbarLay"
        layout="@layout/custum_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/codesendtv1"
        android:layout_width="236dp"
        android:layout_height="76dp"
        android:layout_below="@id/toolbarLay"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Enter code sent to you number"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tvSentMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codesendtv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14dp" />

    <com.chaos.view.PinView
        android:id="@+id/otp_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSentMsg"
        android:layout_centerHorizontal="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemWidth="48dp"
        app:lineColor="@color/black"
        app:lineWidth="2dp"
        app:viewType="line" />

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_View"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Resend"
        android:textColor="?attr/primaryTitleColor"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/otpsubmitbtn"
        android:layout_below="@+id/tvResend"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="15"
        android:text="confirm"
        android:textColor="@color/white" />
</RelativeLayout>