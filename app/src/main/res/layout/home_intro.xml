<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_splash_bg"
    android:layout_height="match_parent"

    >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/introPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_intro_bottom"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VectorDrawableCompat" />



    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        style="@style/TextViewBold"
        android:layout_height="wrap_content"
        android:text="Protection with Problems  "
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/guide"/>

    <TextView
        android:id="@+id/tvSubTitle"
        style="@style/TextViewRegular"
        android:layout_width="0dp"
        android:text="Single app with many solution"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/indicators"/>


    <LinearLayout
        android:id="@+id/indicators"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/llNext"
        android:layout_height="wrap_content">

        <View
            android:layout_width="18dp"
            android:background="@drawable/capsule_primary"
            android:layout_height="4dp"/>

        <View
            android:layout_width="18dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/capsule_primary_lite"
            android:layout_marginEnd="8dp"
            android:layout_height="4dp"/>

        <View
            android:layout_width="18dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/capsule_primary_lite"
            android:layout_height="4dp"/>

        <View
            android:layout_width="18dp"
            android:background="@drawable/capsule_primary_lite"
            android:layout_height="4dp"/>


    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvSkip"
        style="@style/TextViewMedium"
        android:text="@string/skip"
        android:layout_marginStart="16dp"
        android:background="?selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/llNext"
        app:layout_constraintBottom_toBottomOf="@id/llNext"
        />

    <LinearLayout
        android:id="@+id/llNext"
        android:layout_width="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvNext"
            style="@style/TextViewMedium"
            android:textColor="@android:color/white"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:text="@string/next"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="12sp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_double_arrow"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>