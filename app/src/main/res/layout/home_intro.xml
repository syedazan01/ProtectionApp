<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F3F9FF"
    android:background="#F3F9FF"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins_semibold"
                android:text="service"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ivBluelightFilter"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/nightmode" />
        </RelativeLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCallRecorder"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="21dp"
                app:cardBackgroundColor="#E4DEEDFF"
                app:cardCornerRadius="17dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="end"
                        app:cardBackgroundColor="#DEEDFF"
                        app:cardCornerRadius="70dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:src="@drawable/ic_call_recorder" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Call \nrecorder"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCameraDetector"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="21dp"
                app:cardBackgroundColor="#DEEDFF"
                app:cardCornerRadius="17dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="end"
                        app:cardBackgroundColor="#DDEEFF"
                        app:cardCornerRadius="70dp">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cameradetector_logo" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="CAMERA \ndetector"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFileShare"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="21dp"
                app:cardBackgroundColor="#DEEDFF"
                app:cardCornerRadius="17dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="end"
                        app:cardBackgroundColor="#DEEDFF"
                        app:cardCornerRadius="70dp">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:src="@drawable/filesshare" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="file share"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardKillNotification"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="21dp"
                app:cardBackgroundColor="#DEEDFF"
                app:cardCornerRadius="17dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="end"
                        app:cardBackgroundColor="#DEEDFF"
                        app:cardCornerRadius="70dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:src="@drawable/ic_bell_icon" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="kill \nnotification"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </GridLayout>

    </LinearLayout>


</ScrollView>